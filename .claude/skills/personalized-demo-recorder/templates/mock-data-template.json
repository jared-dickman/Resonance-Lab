{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["company", "industry", "pillar", "clusters"],
  "properties": {
    "company": {
      "type": "string",
      "description": "Company name",
      "minLength": 1
    },
    "industry": {
      "type": "string",
      "description": "Industry vertical",
      "minLength": 1
    },
    "pillar": {
      "type": "object",
      "required": ["title", "content"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Main pillar strategy title",
          "minLength": 10,
          "maxLength": 100
        },
        "content": {
          "type": "string",
          "description": "Brief pillar description",
          "minLength": 50,
          "maxLength": 500
        }
      }
    },
    "clusters": {
      "type": "array",
      "description": "3-4 supporting cluster topics",
      "minItems": 3,
      "maxItems": 4,
      "items": {
        "type": "object",
        "required": ["title", "content"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Cluster topic title",
            "minLength": 10,
            "maxLength": 100
          },
          "content": {
            "type": "string",
            "description": "Brief cluster description",
            "minLength": 50,
            "maxLength": 500
          }
        }
      }
    }
  }
}
