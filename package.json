    "frontend"
  ],
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.55",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ast-grep/cli": "^0.39.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-plugin-boundaries": "^5.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-storybook": "^9.1.14",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "storybook": "^8.6.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "npm run build -w frontend",
    "dev": "npm run dev -w frontend",
    "start": "npm run start -w frontend",
    "test": "echo \"No unit tests configured yet\" && exit 0",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run type-check -w frontend",
    "test:ast-grep-rules": "tsx scripts/test-ast-grep-rules.ts",
    "ast-grep:scan": "ast-grep scan",
    "check:all": "npm run lint:check && npm run format:check && npm run ast-grep:scan",
    "prepare": "husky"
  }
}
